<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D1EEEE"
    tools:context=".AndroidProjectsActivity" >

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/appume_banner" />

    <TextView
        android:id="@+id/activityAndroidProjectsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Header"
        android:textSize="32sp"
        android:textColor="#454545" />

    <TextView
        android:id="@+id/activityGitHubRepoAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityAndroidProjectsHeader"
        android:layout_marginTop="32dp"
        android:text="GitHub Repo Android"
        android:textSize="20sp"
        android:textColor="#454545" />

    <TextView
        android:id="@+id/activityGooglePlayStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityGitHubRepoAndroid"
        android:text="Google Play Store Link"
        android:textSize="20sp"
        android:textColor="#454545" />

    <TextView
        android:id="@+id/activityGitHubRepoIOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityGooglePlayStore"
        android:text="GitHub Repo IOS"
        android:textSize="20sp"
        android:textColor="#454545" />

    <TextView
        android:id="@+id/activityAppStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityGitHubRepoIOS"
        android:text="App Store Link"
        android:textSize="20sp"
        android:textColor="#454545" />

    <ListView
        android:id="@+id/activityAndroidProjectList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityAppStore"
        android:textColor="#454545" />
</RelativeLayout>